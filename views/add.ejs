<h2 class="text-center my-2">Add new word</h2>
<% if (error) { %>
    <p class="text-center text-danger"><%= error %></p>
<% } %>
<form action="/add" method="POST" class="col-md-6 m-auto">
    <div class="form-group">
        <label for="english">The word of English</label>
        <input type="text" name="english" autofocus required value="<% if (word) { %> <%= word.bulgarian %><% } %>" class="form-control" id="english">
    </div>
    <div class="form-group">
        <label for="bulgarian">The word of Bulgarian</label>
        <input type="text" name="bulgarian" required value="<% if (word) { %> <%= word.english %><% } %>" class="form-control" id="bulgarian">
    </div>
    <a href="/" class="btn btn-danger">Cancel</a>
    <button type="submit" class="btn btn-success">Add word</button>
</form>