<h2 class="text-center my-2">Random words</h2>
<a href="/add" class="btn btn-primary my-4">Add word</a>
<table class="table table-striped table-ligth">
    <thead>
        <tr>
            <th scope="col">Number</th>
            <th scope="col">English</th>
            <th scope="col">Bulgarian</th>
        </tr>
    </thead>
    <tbody>
        <% words.forEach( (word, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= word.english.toLowerCase() %></td>
                <td><%= word.bulgarian %></td>
            </tr>
        <% }) %>
    </tbody>
</table>